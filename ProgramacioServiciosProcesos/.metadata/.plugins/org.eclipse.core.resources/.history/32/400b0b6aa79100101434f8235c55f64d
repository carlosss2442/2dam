package EjerciciosT1;

import java.util.Scanner;

public class ejercicio8 {

	public static void main(String[] args) {
		
		
		int num;
		do {
			Scanner teclado = new Scanner(System.in);
			System.out.println("Introduce un numero del 1 al 12: ");
			num = teclado.nextInt();
			if (num < 1 || num > 12  ) System.out.println("El numero debe estar entre 1 y 12.");
			if (num == 1) System.out.println("Mes: Enero");
			if (num == 2) System.out.println("Mes: Febrero");
			if (num == 3) System.out.println("Mes: Marzo");
			if (num == 4) System.out.println("Mes: Abril");
			if (num == 5) System.out.println("Mes: Mayo");
			if (num == 6) System.out.println("Mes: Junio");
			if (num == 7) System.out.println("Mes: Julio");
			if (num == 8) System.out.println("Mes: Agosto");
			if (num == 9) System.out.println("Mes: Septiembre");
			if (num == 10) System.out.println("Mes: Octubre");
			if (num == 11) System.out.println("Mes: Noviembre");
			if (num == 12) System.out.println("Mes: Diciembre");
		} while (num < 1 && num > 12 );
		
		
		
		
		
		
		
		/*if (num < 1 || num > 12  ) {
			System.out.println();
			
		}*/
		
		
	}

}
